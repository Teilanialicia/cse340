<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="container-col padding-4 font-2 gap-2">
    <a href="/inv/add-classification">Add New Classification</a>
    <a href="/inv/add-inventory">Add New Vehicle</a>
    <h2>Manage Inventory</h2>
    <p>Select a classification from the list to see items belonging to the classification</p>

    <select required name="classification_id" id="classificationList">
      <option label="" value=""></option>
      <% classifications.forEach(option => { %>
        <option value="<%= option.classification_id %>"><%= option.classification_name %></option>
      <%}); %>
    </select>


    <table id="inventoryDisplay"></table>
    <noscript>JavaScript must be enabled to use this page.</noscript>
</div>

<script src="../../js/inventory.js"></script>