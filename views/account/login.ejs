<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-container">
    <form class="form" id="loginForm" action="/account/login" method="post">
        <div>
            <label for="email">Email:</label>
            <input required type="email" name="account_email" id="email" value="<%= locals.account_email %>">
        </div>
        <div>
            <label for="password">Password:</label>
            <input required type="password" name="account_password" id="password">
        </div>
        <input class="submit-button" type="submit" value="Login">
        <span>No account? <a href="/account/register">Sign-up</a></span>
    </form>
</div>