<% if (title) { %>
<h1><%= title %></h1>
<% } else {
  res.redirect('/')
} %>

<%- messages() %>

<% if (errors) { %>
  <ul class="notice">
 <% errors.array().forEach(error => { %>
   <li><%= error.msg %></li>
<%  }) %>
 </ul>
<% } %>

<div class="form-container">
<form class="form" action="/account/register" method="post">
        <div>
            <label for="firstName">First Name:</label>
            <input required type="text" name="account_firstname" id="firstName" value="<%= locals.account_firstname %>">
        </div>
        <div>
            <label for="lastName">Last Name:</label>
            <input required type="text" name="account_lastname" id="lastName" value="<%= locals.account_lastname %>">
        </div>
        <div>
            <label for="password">Email:</label>
            <input required type="email" name="account_email" id="email" value="<%= locals.account_email %>">
        </div>
        <div>
            <label for="password">*Password: 

            </label>
            <input required type="password" name="account_password" id="password" 
                pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{5,}$">
        </div>
        <input class="submit-button" type="submit" value="Register">
        <span>* Should be 5 characters long with at least one uppercase and lowercase letter, one number, and one special character</span>
    </form>
</div>